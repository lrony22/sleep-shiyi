{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "types": ["jest"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
    